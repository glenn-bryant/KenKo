<%= render 'shared/search' %>
<h1>Clinics#show</h1>
<p>Find me in app/views/clinics/show.html.erb</p>
<p>latitude: <%= @clinic.latitude %> </p>
<p>longitude: <%= @clinic.longitude %> </p>

<% if user_signed_in? %>
<% pre_like = @clinic.likes.find { |like| like.user_id == current_user.id} %>
  <p><%#= @clinic.likes.count %> <%= pre_like.present? ? 'liked' : 'not liked'%></p>
<% else %>
  <p>â™¡</p>
<% end %>

<div id=<%= @clinic.id %>>
  <% if user_signed_in? %>
   <% pre_like = @clinic.likes.find { |like| like.user_id == current_user.id} %>
  <% if pre_like %>
    <%= render "views/likes/destroy" %>
  <% else %>
    <%= render "views/likes/create" %>
  <% end %>
  <% else %>
    <h1>Please sign in to like this clinic</h1>
  <% end %>
</div>

<div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @clinicmarkers.to_json %>"
      data-mapbox-api-key= "<%= ENV['MAPBOX_API_KEY'] %>">
  </div>