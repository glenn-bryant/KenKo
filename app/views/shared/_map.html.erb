<% if params[:query].present? %>
  <div id="map"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key= "<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<% else %>
  <div id="map"
    style="width: 100%; height: 600px; display:none;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key= "<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
<% end %>